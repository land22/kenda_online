{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="main-panel">
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-icon" data-background-color="green">
                        <i class="material-icons">&#xE894;</i>
                    </div>
                    <div class="card-content">
                        <h4 class="card-title">liste des cat√©gories</h4>
                        <div class="row">
                            <div class="col-md-5">

                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Nom</th>
                                            <th>Image</th>
                                            <th>Description</th>
                                            <th>actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for ken_category in ken_categories %}
                                        <tr>
                                            <td>{{ ken_category.nom }}</td>
                                            <td>{{ ken_category.image }}</td>
                                            <td>{{ ken_category.description }}</td>
                                            <td>
                                                <a href="{{ path('ken_categories_show', {'id': ken_category.id}) }}">afficher</a>
                                                <a href="{{ path('ken_categories_edit', {'id': ken_category.id}) }}">lister</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="5">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                                <a href="{{ path('ken_categories_new') }}">Ajouter</a>

